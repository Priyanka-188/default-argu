#include<iostream>
using namespace std;
 inline float money_recieved(int money,float factor=1.2)
{
    return money*factor;
}
int main()
{
    int money;
    cout<<"Enter your current money"<<endl;
    cin>>money;

    cout<<"if you have "<<money<<" Rs in your account .. you will get "<<money_recieved(money)<<" in one year"<<endl;
    cout<<"if you have "<<money<<" Rs in your account .. you will get "<<money_recieved(money,2.0)<<" in one year";
    return 0;
}
